<body class="containerFondo">
  <div class="container-general">
    <div class="izquierda">
      <div class="comodines-container">
        <div class="comodin-1"></div>
        <div class="comodin-2"></div>
        <div class="comodin-3"></div>
      </div>
      <div class="container position-absolute" id="id">
        <div class="pregunta-titulo">
          <h4>@ViewBag.PreguntaActual.textoPregunta</h4>
        </div>
        <div class="opciones">
          <div class="arriba">
            <h4 class="opcion-1"><span>@ViewBag.RespuestaActual[0].opcionRespuesta:</span> @ViewBag.RespuestaActual[0].textoRespuesta </h4>
            <h4 class="opcion-2"><span>@ViewBag.RespuestaActual[1].opcionRespuesta:</span> @ViewBag.RespuestaActual[1].textoRespuesta </h4>
          </div>
          <div class="abajo">
            <h4 class="opcion-3"><span>@ViewBag.RespuestaActual[2].opcionRespuesta:</span> @ViewBag.RespuestaActual[2].textoRespuesta</h4>
            <h4 class="opcion-4"><span>@ViewBag.RespuestaActual[3].opcionRespuesta:</span> @ViewBag.RespuestaActual[3].textoRespuesta</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="derecha">
      <div class="pozo">
        <ul>
          <li style="background-color: yellow;font-weight: bold;">15 - $2.000.000</li>
          <li style="background-color: yellow;">14 - $1.000.000</li>
          <li style="background-color: yellow;">13 - $750.000</li>
          <li style="background-color: yellow;">12 - $500.000</li>
          <li style="background-color: yellow;">11 - $300.000</li>
          <li style="background-color: yellow;font-weight: bold;">10 - $180.000</li>
          <li style="background-color: yellow;">9 - $130.000</li>
          <li style="background-color: yellow;">8 - $100.000</li>
          <li>7 - $70.000</li>
          <li>6 - $50.000</li>
          <li style="font-weight: bold;">5 - $30.000</li>
          <li>4 - $20.000</li>
          <li>3 - $10.000</li>
          <li>2 - $5.000</li>
          <li>1 - $2.000</li>
        </ul>
      </div>
    </div>
  </div>
</body>